<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>UDOO Neo IoT playground</title>
    <link href="bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="dist/css/sb-admin-2.css" rel="stylesheet">
    <link href="bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <a class="navbar-brand">UDOO Neo IoT playground</a>
            </div>
        </nav>

        <div id="iot-ct">
            <div class="row">
                <div class="col-xs-6">
                    <div class="panel panel-warning" style="margin-left:15px;">
                        <div class="panel-heading">
                            Smart Home
                        </div>
                        <div class="panel-body">
                            <span id="HouseWater">Water</span>
                            <span id="HouseSmoke">Smoke</span>
                            <span id="HouseTemp">Temp</span>
                            <span id="HouseGas">Gas</span>
                            <span id="HouseSolar">Solar</span>
                        </div>
                    </div>
                </div>
                
                <div class="col-xs-6">
                    <div class="panel panel-warning" style="margin-right:15px;">
                        <div class="panel-heading">
                            Smart Parking
                        </div>
                        <div class="panel-body">
                            <span id="SmartCityir1">Water</span>
                            <span id="SmartCityir2">Smoke</span>
                            <span id="SmartCitylight">Temp</span>
                            <span id="SmartCitysound">Gas</span>
                            <span id="SmartCitywind">Solar</span>
                            <span id="SmartCitytrash">Solar</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-xs-6">
                    <div class="panel panel-warning" style="margin-left:15px;">
                        <div class="panel-heading">
                            Smart Car
                        </div>
                        <div class="panel-body">
                            
                            
                            <span id="ConnStatus">Not Connected</span>
                            <div> <h3>Car1 </h3>
                            <span id="MotionCar1acc">ACC</span>
                            <span id="MotionCar1mag">MAG</span>
                            <span id="MotionCar1gyr">GYR</span></div>
                            <div> <h3>Car2 </h3>
                            <span id="MotionCar2acc">ACC</span>
                            <span id="MotionCar2mag">MAG</span>
                            <span id="MotionCar2gyr">GYR</span></div>

                            <canvas id="car1speed" width="250" height="250" style="background-color: black; border-radius: 125px; box-shadow: 0 0 25px gray; border: 5px solid #ddd">
                            [No canvas support]
                            </canvas>
                            
                            
                        </div>
                    </div>
                </div>
                
                <div class="col-xs-6">
                    <div class="panel panel-warning" style="margin-right:15px;">
                        <div class="panel-heading">
                            Smart Truck
                        </div>
                        <div class="panel-body">
                            <span id="Truckacc">ACC</span>
                            <span id="Truckmag">MAG</span>
                            <span id="Truckgyr">GYR</span>
                            <span id="Truckdoor">GYR</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="bower_components/jquery/dist/jquery.min.js"></script>
    <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="socket.io/socket.io.js"></script>
    <script src="js/rgraph/libraries/RGraph.common.core.js"></script>
    <script src="js/rgraph/libraries/RGraph.common.dynamic.js"></script>
    <script src="js/rgraph/libraries/RGraph.common.effects.js"></script>
    <script src="js/rgraph/libraries/RGraph.gauge.js"></script>
    <script type='text/javascript' src='js/socket-gpio.js'></script>
    <script>
        window.onload = function () {
            createGauge("car1speed", 240);
        };
    </script>
</body>
</html>
